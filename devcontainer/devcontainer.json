{
  "name": "Django Inventory",
  "features": {
    "ghcr.io/devcontainers/features/python:1": { "version": "3.12" }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "pip install -r requirements.txt && python -m django --version",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "batisteo.vscode-django"]
    }
  }
}
